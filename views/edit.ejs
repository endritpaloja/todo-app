<h3>Edit Todo</h3>
<form action="/todo/update/<%= doc._id %>" method="POST">
  <div>
    <label>Todo title: </label>
    <input type="text" name="title" value="<%= doc.title %>" placeholder="Add title">
  </div>
  <div>
    <label>Todo description: </label>
    <textarea name="description" placeholder="Add Body"><%= doc.description %></textarea>
  </div>
  <button type="submit">Save</button>
</form>
